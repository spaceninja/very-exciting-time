<ol class="episode-list">
{% for episode in episodeList %}
	<li class="episode-list__item{% if episode.url == url %} is-active{% endif %}">
    <p class="episode-list__meta">
    {% if episode.data.episodeNumber %}
      <span class="episode-list__number">Ep {{ episode.data.episodeNumber }}:</span>
    {% endif %}
		<a href="{{ episode.url }}" class="episode-list__link">
      {%- if episode.data.title -%}
        {{ episode.data.title }}
      {%- else -%}
        <code>{{ episode.url }}</code>
      {%- endif -%}
    </a>
		<time class="episode-list__date" datetime="{{ episode.date | htmlDateString }}">
      {{ episode.date | readableDate("DD") }}
    </time>
    </p>
    <p class="episode-list__description">
      {{ episode.data.description }}
    </p>
	</li>
{% endfor %}
</ol>
